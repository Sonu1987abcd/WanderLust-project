<% layout('layouts/boilerplate') %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h2><i class="fa-solid fa-receipt"></i> Booking Details</h2>
    <hr>
  </div>
</div>

<div class="row">
  <div class="col-8 offset-2">
    <div class="card mb-4">
      <img src="<%= booking.listing.image.url %>" class="card-img-top" alt="<%= booking.listing.title %>" style="height: 300px; object-fit: cover;">
      <div class="card-body">
        <h3 class="card-title"><%= booking.listing.title %></h3>
        <p class="card-text"><%= booking.listing.description %></p>
      </div>
    </div>

    <div class="card">
      <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Booking Information</h4>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-md-6">
            <strong>Check-in Date:</strong><br>
            <%= new Date(booking.checkInDate).toLocaleDateString('en-IN', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
          </div>
          <div class="col-md-6">
            <strong>Check-out Date:</strong><br>
            <%= new Date(booking.checkOutDate).toLocaleDateString('en-IN', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
          </div>
        </div>
        <hr>
        <div class="row mb-3">
          <div class="col-md-6">
            <strong>Number of Guests:</strong> <%= booking.guests %>
          </div>
          <div class="col-md-6">
            <strong>Booking Status:</strong> 
            <span class="badge <%= booking.status === 'completed' ? 'bg-success' : booking.status === 'pending' ? 'bg-warning' : 'bg-danger' %>">
              <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
            </span>
          </div>
        </div>
        <hr>
        <div class="row mb-3">
          <div class="col-md-6">
            <strong>Location:</strong><br>
            <%= booking.listing.location %>, <%= booking.listing.country %>
          </div>
          <div class="col-md-6">
            <strong>Owner:</strong><br>
            <%= booking.listing.owner.username %>
          </div>
        </div>
        <hr>
        <div class="row mb-3">
          <div class="col-md-12">
            <h5>Payment Details</h5>
            <p><strong>Amount Paid:</strong> â‚¹<%= booking.amount.toLocaleString('en-IN') %></p>
            <% if (booking.razorpayPaymentId) { %>
              <p><strong>Payment ID:</strong> <%= booking.razorpayPaymentId %></p>
              <p><strong>Order ID:</strong> <%= booking.razorpayOrderId %></p>
            <% } %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-md-12">
            <p class="text-muted">
              <small>Booking Date: <%= new Date(booking.bookingDate).toLocaleDateString('en-IN', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></small>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-3">
      <a href="/bookings" class="btn btn-secondary">Back to My Bookings</a>
      <a href="/listings/<%= booking.listing._id %>" class="btn btn-primary">View Listing</a>
    </div>
  </div>
</div>
